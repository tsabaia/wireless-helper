<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/setting_background_color"
    android:paddingTop="100dp">

    <!-- Big Round Button Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="48dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnToggleService"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/round_button"
            android:text="@string/start_service"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            android:elevation="12dp"
            android:stateListAnimator="@null"/>
    </FrameLayout>

    <!-- Settings Section Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONNECTION SETTINGS"
        android:textColor="@color/brand_teal"
        android:textSize="14sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"/>

    <!-- Settings List Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Connection Mode Item (Clickable Row) -->
        <LinearLayout
            android:id="@+id/layoutConnectionMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connection_mode_label"
                android:textColor="@color/adaptive_text_color"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvConnectionModeValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Network Discovery"
                android:textColor="@color/material_grey_700"
                android:textSize="14sp"/>
        </LinearLayout>
        
        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

</LinearLayout>