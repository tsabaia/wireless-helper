<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/window_background"
    android:paddingTop="100dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- Big Round Button -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnToggleService"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:background="@drawable/round_button"
                    android:text="@string/start_service"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:elevation="8dp"
                    android:stateListAnimator="@null"/>
            </FrameLayout>

            <!-- SETTINGS Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SETTINGS"
                android:textColor="@color/brand_teal"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingBottom="8dp"/>

            <!-- Settings List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <!-- 1. Connection Mode -->
                <LinearLayout
                    android:id="@+id/layoutConnectionMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/bg_item_top"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/connection_mode_label"
                        android:textColor="@color/text_title"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/tvConnectionModeValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mode_nsd"
                        android:textColor="@color/text_subtitle"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- 2. Auto Start -->
                <LinearLayout
                    android:id="@+id/layoutAutoStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/bg_item_bottom"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/auto_start_label"
                        android:textColor="@color/text_title"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/tvAutoStartValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/auto_start_no"
                        android:textColor="@color/text_subtitle"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- 3. Bluetooth Device -->
                <LinearLayout
                    android:id="@+id/layoutBluetoothDevice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/bg_item_bottom"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/bt_device_label"
                        android:textColor="@color/text_title"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/tvBluetoothDeviceValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/not_set"
                        android:textColor="@color/text_subtitle"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- INFO Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/category_info"
                android:textColor="@color/brand_teal"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="24dp"
                android:paddingBottom="8dp"/>

            <!-- Info List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <!-- Version -->
                <LinearLayout
                    android:id="@+id/layoutVersion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/bg_item_top">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/version"
                        android:textColor="@color/text_title"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:id="@+id/tvVersionValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0.1.0"
                        android:textColor="@color/text_subtitle"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- About & Support -->
                <LinearLayout
                    android:id="@+id/layoutAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="14dp"
                    android:background="@drawable/bg_item_bottom"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about"
                        android:textColor="@color/text_title"
                        android:textSize="16sp"
                        android:textStyle="normal"
                        android:layout_marginBottom="2dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_description"
                        android:textColor="@color/text_subtitle"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
