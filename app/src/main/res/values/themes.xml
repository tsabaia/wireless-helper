<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WirelessHelper" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:windowFullscreen">true</item> We might not want fullscreen for this utility app -->
        
        <item name="colorPrimary">@color/brand_teal</item>
        <item name="colorSecondary">@color/brand_teal</item>
        <item name="colorAccent">@color/brand_teal</item>
        <item name="android:colorAccent">@color/brand_teal</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.WirelessHelper">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>